@model AT_Csharp_2T_2S.ViewModels.Reserva.CreateReservaViewModel
@{
    ViewData["Title"] = "Fazer uma Nova Reserva";
}

<h1>@ViewData["Title"]</h1>
<h4>Selecione o pacote desejado e confirme sua reserva:</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        
        <form asp-action="Create" method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="PacoteTuristicoId" class="control-label"></label>
                
                <select asp-for="PacoteTuristicoId" 
                        asp-items="Model.PacotesDisponiveis"
                        class="form-control">
                    <option value="">-- Selecione um Pacote --</option>
                </select>
                
                @* Exibe a mensagem de erro do [Required] se o usuário não selecionar nada *@
                <span asp-validation-for="PacoteTuristicoId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Confirmar Reserva" class="btn btn-success" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}